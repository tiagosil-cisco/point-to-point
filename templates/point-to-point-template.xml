    <?end?>
    <?if {$ipv6_enabled = 'true'}?> 
      <ipv6>
        <address>
          <prefix-list>
            <prefix>{$ipv6_address_b}/{$mask_v6}</prefix>
          </prefix-list>
        </address>
      </ipv6>
    <?end?>
    <?if {$link_state_b = 'no shutdown'}?> 
      <shutdown tags="delete"/>
    <?else?>

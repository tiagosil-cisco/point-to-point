<config-template xmlns="http://tail-f.com/ns/config/1.0">
  
  <?macro IntCfgSideA?>
    <?set name={$NAME}?>
    <?set bw_new={$BW_NEW}?> 
    <?set cdp={$CDP}?>
    <?set mtu={$MTU}?> 

    <?set link_state_a={$LINK_STATE_A}?>
    <?set vlan_id_a={$VLAN_ID_A}?>
    <?set vrf_a={$VRF_A}?> 
    <?set ipv4_enabled={/ipv4_enabled}?> 
    <?set ipv4_address_a={$IPV4_ADDRESS_A}?> 
    <?set mask_v4={$MASK_V4}?> 
    <?set ipv6_enabled={/ipv6_enabled}?> 
    <?set ipv6_address_a={$IPV6_ADDRESS_A}?> 
    <?set mask_v6={$MASK_V4}?> 

    <description>{$name}</description>
    <bandwidth>{$bw_new}</bandwidth>
    <?if {$mtu != ''}?> 
      <mtu>{$mtu}</mtu>
    <?end?>
    <?if {$vrf_a != 'None'}?> 
      <vrf>{$vrf_a}</vrf>
    <?end?>
    <?if {$ipv4_enabled = 'true'}?> 
      <ipv4>
        <address>
          <ip>{$ipv4_address_a}</ip>
          <mask>{$mask_v4}</mask>
        </address>
      </ipv4>
    <?end?>
    <?if {$ipv6_enabled = 'true'}?> 
      <ipv6>
        <address>
          <prefix-list>
            <prefix>{$ipv6_address_a}/{$mask_v6}</prefix>
          </prefix-list>
        </address>
      </ipv6>
    <?end?>
    <?if {$link_state_a = 'no shutdown'}?> 
      <shutdown tags="delete"/>
    <?else?>
      <shutdown/>
    <?end?>
    <?if {$cdp = 'true'}?> 
      <cdp/>
    <?else?>
      <cdp tags="delete"/>
    <?end?>
  <?endmacro?>

  <?macro IntCfgSideB?>
    <?set name={$NAME}?>
    <?set bw_new={$BW_NEW}?> 
    <?set cdp={$CDP}?>
    <?set mtu={$MTU}?> 

    <?set link_state_b={$LINK_STATE_B}?>
    <?set vlan_id_b={$VLAN_ID_B}?>
    <?set vrf_b={$VRF_B}?> 
    <?set ipv4_enabled={/ipv4_enabled}?> 
    <?set ipv4_address_b={$IPV4_ADDRESS_B}?> 
    <?set mask_v4={$MASK_V4}?> 
    <?set ipv6_enabled={/ipv6_enabled}?> 
    <?set ipv6_address_b={$IPV6_ADDRESS_B}?> 
    <?set mask_v6={$MASK_V4}?> 

    <description>{$name}</description>
    <bandwidth>{$bw_new}</bandwidth>
    <?if {$mtu != ''}?> 
      <mtu>{$mtu}</mtu>
    <?end?>
    <?if {$vrf_b != 'None'}?> 
      <vrf>{$vrf_b}</vrf>
    <?end?>
    <?if {$ipv4_enabled = 'true'}?> 
      <ipv4>
        <address>
          <ip>{$ipv4_address_b}</ip>
          <mask>{$mask_v4}</mask>
        </address>

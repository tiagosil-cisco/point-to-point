    <?end?>
  <?endmacro?>

  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{$DEVICE_SIDE_A}</name>
      <config>
        <interface xmlns="http://tail-f.com/ned/cisco-ios-xr" tags="merge"> 
          <?if {/side_a/interface_type = 'GigabitEthernet'}?>
            <?if {$ENCAPSULATION_A != 'None'}?>
              <GigabitEthernet >
                <id>{$INTERFACE_ID_A}.{$SUB_INTERFACE_ID_A}</id>
                <encapsulation>
                  <dot1q>
                    <vlan-id>{$VLAN_ID_A}</vlan-id>
                  </dot1q>
                </encapsulation>
                <?expand IntCfgSideA ?>
              </GigabitEthernet>
            <?else?>
              <GigabitEthernet >
                <id>{$INTERFACE_ID_A}</id>
                <?expand IntCfgSideA ?>
              </GigabitEthernet>
            <?end?>
            <?elif {/side_a/interface_type = 'TenGigE'}?>
              <?if {$ENCAPSULATION_A != 'None'}?>
                <TenGigE >
                  <id>{$INTERFACE_ID_A}.{$SUB_INTERFACE_ID_A}</id>
                  <encapsulation>
                    <dot1q>
                      <vlan-id>{$VLAN_ID_A}</vlan-id>
                    </dot1q>
                  </encapsulation>
                  <?expand IntCfgSideA ?>
                </TenGigE>
              <?else?>
                <TenGigE >
                  <id>{$INTERFACE_ID_A}</id>
                  <?expand IntCfgSideA ?>
                </TenGigE>
              <?end?>
            <?elif {/side_a/interface_type = 'FortyGigE'}?>
            <?if {$ENCAPSULATION_A != 'None'}?>
              <FortyGigE >
                <id>{$INTERFACE_ID_A}.{$SUB_INTERFACE_ID_A}</id>
                <encapsulation>
                  <dot1q>
                    <vlan-id>{$VLAN_ID_A}</vlan-id>
                  </dot1q>
                </encapsulation>
                <?expand IntCfgSideA ?>
              </FortyGigE>
            <?else?>
              <FortyGigE >
                <id>{$INTERFACE_ID_A}</id>
                <?expand IntCfgSideA ?>
              </FortyGigE>
            <?end?>

            <?elif {/side_a/interface_type = 'HundredGigE'}?>
            <?if {$ENCAPSULATION_A != 'None'}?>
              <HundredGigE >
                <id>{$INTERFACE_ID_A}.{$SUB_INTERFACE_ID_A}</id>
                <encapsulation>
                  <dot1q>
                    <vlan-id>{$VLAN_ID_A}</vlan-id>
                  </dot1q>
                </encapsulation>
                <?expand IntCfgSideA ?>
              </HundredGigE>
            <?else?>
              <HundredGigE >
                <id>{$INTERFACE_ID_A}</id>
                <?expand IntCfgSideA ?>
              </HundredGigE>
            <?end?>
          <?end?>
        </interface>
      </config>
    </device>
    <?if {$DEVICE_SIDE_B != 'None'}?> 
      <device>
        
        <name>{$DEVICE_SIDE_B}</name>
        <config>
          <interface xmlns="http://tail-f.com/ned/cisco-ios-xr" tags="merge"> 
            <?if {/side_b/interface_type = 'GigabitEthernet'}?>
              <?if {$ENCAPSULATION_B != 'None'}?>
                <GigabitEthernet >
                  <id>{$INTERFACE_ID_B}.{$SUB_INTERFACE_ID_B}</id>
                  <encapsulation>
                    <dot1q>
                      <vlan-id>{$VLAN_ID_B}</vlan-id>
                    </dot1q>
                  </encapsulation>
                  <?expand IntCfgSideB ?>
                </GigabitEthernet>
              <?else?>
                <GigabitEthernet >
                  <id>{$INTERFACE_ID_B}</id>
                  <?expand IntCfgSideB ?>
                </GigabitEthernet>
              <?end?>
              <?elif {/side_b/interface_type = 'TenGigE'}?>
                <?if {$ENCAPSULATION_B != 'None'}?>
                  <TenGigE >
                    <id>{$INTERFACE_ID_B}.{$SUB_INTERFACE_ID_B}</id>
                    <encapsulation>
                      <dot1q>
                        <vlan-id>{$VLAN_ID_B}</vlan-id>
                      </dot1q>
                    </encapsulation>
                    <?expand IntCfgSideB ?>
                  </TenGigE>
                <?else?>
                  <TenGigE >
                    <id>{$INTERFACE_ID_B}</id>
                    <?expand IntCfgSideB ?>
                  </TenGigE>
                <?end?>
              <?elif {/side_b/interface_type = 'FortyGigE'}?>
              <?if {$ENCAPSULATION_B != 'None'}?>
                <FortyGigE >
                  <id>{$INTERFACE_ID_B}.{$SUB_INTERFACE_ID_B}</id>
                  <encapsulation>
                    <dot1q>
                      <vlan-id>{$VLAN_ID_B}</vlan-id>
                    </dot1q>
                  </encapsulation>
                  <?expand IntCfgSideB ?>
                </FortyGigE>
              <?else?>
                <FortyGigE >
                  <id>{$INTERFACE_ID_B}</id>
                  <?expand IntCfgSideB ?>
                </FortyGigE>
              <?end?>
  
              <?elif {/side_b/interface_type = 'HundredGigE'}?>
              <?if {$ENCAPSULATION_B != 'None'}?>
                <HundredGigE >
                  <id>{$INTERFACE_ID_B}.{$SUB_INTERFACE_ID_B}</id>
                  <encapsulation>
                    <dot1q>
                      <vlan-id>{$VLAN_ID_B}</vlan-id>
                    </dot1q>
                  </encapsulation>
                  <?expand IntCfgSideB ?>
                </HundredGigE>
              <?else?>
                <HundredGigE >
                  <id>{$INTERFACE_ID_B}</id>
                  <?expand IntCfgSideB ?>
                </HundredGigE>
              <?end?>
            <?end?>
          </interface>
        </config>
      </device>
    <?end?>
  </devices>
</config-template>
